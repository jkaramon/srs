# Build the docker image with `npx nx docker-build srs`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t srs`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system srs && \
    adduser --system -G srs srs

COPY dist/apps/srs srs
RUN chown -R srs:srs .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix srs --omit=dev -f install

CMD [ "node", "srs" ]
